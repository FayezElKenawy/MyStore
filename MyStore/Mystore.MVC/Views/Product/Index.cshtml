@model MyStore.Application.ViewModel.ProductViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table-bordered">
    <tbody>
        <tr>
            <td>Product Id</td>
            <td>Product Name</td>
            <td>Details</td>
        </tr>
@foreach (var product in Model.Products)
{
        <tr>
            <td>
                <h3>@product.Id</h3>
            </td>
            <td>
                <h3>@product.Name</h3>
            </td>
            <td>
                <h3>@product.Details</h3>
            </td>
        </tr>

}
    </tbody>
</table>

